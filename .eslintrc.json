{
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:import/recommended",
    "plugin:import/warnings",
    "plugin:storybook/recommended",
    "prettier"
  ],
  "rules": {
    // セミコロンない場合、エラー出力
    "semi": ["error", "always"],
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ]
  }
}
